.container
  .row
    .col-md-6
      %h1 Pageantus: Pageant Management System
      %p.lead= Faker::Lorem.sentence(5)
    .col-md-6
      .well
        %h2 Sign up
        = form_for @user do |f|
          = f.label :email
          \:
          \#{f.text_field :email}
          %br/
          = f.label :password
          \:
          \#{f.text_field :password}
          %br/
          = f.submit
  .row
    - 3.times do
      .col-md-4
        %h2= Faker::Lorem.sentence(1).titleize
        %p= Faker::Lorem.paragraph